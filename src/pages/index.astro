import "../styles/main.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/fonts/inter/inter.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>welcome | srxl.me</title>
    <style>
      html,
      body {
        margin: 0;
      }

      h1 {
        margin-top: 0;
      }

      .container {
        height: 100vh;
        display: grid;
        grid-template-columns: 700px 1fr;
        grid-template-rows: 1fr 300px;
      }

      .side-nav {
        grid-row-start: 1;
        grid-row-end: 3;
        background-color: black;
        color: white;
        padding: 32px;
      }

      .avatar {
        aspect-ratio: 1 / 1;
        width: 100%;
        overflow: hidden;
        margin-top: -200px;
      }

      .webrings {
        background-color: white;
        padding: 32px;
        text-align: right;
      }

      .left-block::before {
        content: "";
        position: absolute;
        left: -100px;
        top: 0;
        width: 35vw;
        height: 100vh;
        background-color: #000;
        transform: skewX(9deg);
      }

      .block-content {
        position: relative;
        padding: 16px;
        color: #fff;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <div class="side-nav">
        <h1>hi.<br />i'm ruby.</h1>
        <h4>welcome to my website.</h4>

        <ul>
          <li>
            <h3><a href="#">home</a> <small>(you are here)</small></h3>
          </li>
          <li>
            <h3><a href="#">about me</a></h3>
          </li>
          <li>
            <h3><a href="#">blog</a></h3>
          </li>
          <li>
            <h3><a href="#">projects</a></h3>
          </li>
          <li>
            <h3><a href="#">gallery</a></h3>
          </li>
        </ul>
      </div>
      <img class="avatar" src="/img/avatar.png" />
      <div class="webrings">
        <h1>webrings</h1>
        <p>coming soon.</p>
      </div>
    </main>
  </body>
</html>
